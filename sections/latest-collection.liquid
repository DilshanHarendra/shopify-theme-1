<section class="top-letest-product-section">
    <div class="container">
        <div class="section-title">
            <h2 class="text-uppercase">{{ section.settings.title }}</h2>
        </div>
        <div class="product-slider owl-carousel">
            {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
                {% render 'product-card' with product as product %}
            {% endfor %}
        </div>
    </div>
</section>


{% schema %}
    {
        "name": "Latest-Collection",
        "limit": 1,
        "settings": [
            {
                "type":"text",
                "id": "title",
                "label": "Title",
                "default": "Latest Products"
            },
            {
                "type":"collection",
                "id": "collection",
                "label": "Collection"
            },
            {
                "type":"range",
                "id": "products_to_show",
                "label": "Products Count",
                "min": 2,
                "max": 12,
                "default": 6
            }

        ],
        "presets": [
            {
                "name": "Latest-Collection"
            }
        ]
    }
{% endschema %}
